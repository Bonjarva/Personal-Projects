{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    // Override or add any app-specific flags
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedSideEffectImports": true,
    "types": ["vite/client"]
  },

  // Make sure TS sees your React/TSX files *and* your ambient shims
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/vite-env.d.ts"
  ]
}
